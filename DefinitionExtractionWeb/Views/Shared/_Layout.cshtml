<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @*<link href="@Url.Content("~/Content/site.css")" rel="stylesheet" type="text/css" />*@
    @*<link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("Content", false)
    @Scripts.Render("~/scripts/jquery-3.4.1.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark"   style="background-color: #333333;">
            <a class="navbar-brand" href="#">Тезаурус</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="Home/Index">Главная <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="Chart/Index">Отчеты</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="Query/Index">Фильтр</a>
                    </li>
                </ul>

                <form class="form-inline">
                    @if (User.Identity.IsAuthenticated)
                    {
                    <div class="nav-item">
                        <a class="text-light">
                            @HttpContext.Current.User.Identity.Name
                        </a>
                    </div>
                       
                        <button class="btn btn-outline-secondary my-2 my-sm-0" type="button">
                            @Html.ActionLink("Выйти", "Logoff", "Authentification")
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-outline-secondary mr-sm-2" type="button">
                            @Html.ActionLink("Вход", "Login", "Authentification")
                        </button>
                        <button class="btn btn-sm btn-outline-secondary my-2 my-sm-0" type="button">
                            @Html.ActionLink("Регистрация", "Register", "Authentification")
                        </button>
                    }
                </form>
            </div>
        </nav>

    <div class="container">
        @RenderBody()
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
    <footer>
        © 2020 -
        <a href="https://github.com/GurovaAnya">Гурова Анна</a>
    </footer>
</body>
</html>

