@model List<DefinitionExtractionWeb.ViewModels.UserTableViewModel>

<h2>Результаты</h2>
@if (Model.Count > 0)
{
    <div class="row">
        <div class="col-md-6">
            <div>
                <table>
                    <tr>
                        <th>
                            @Html.Label("Пользователь")
                        </th>
                        <th>
                            @Html.Label("Почта")
                        </th>
                        <th>
                            @Html.Label("Определения")
                        </th>
                    </tr>
                    @foreach (var info in Model)
                    {
                        <tr>
                            <td>
                                @info.FullName
                            </td>
                            <td>
                                @info.Email
                            </td>
                            <td>
                                @info.Count
                            </td>
                        </tr>
                    }
                </table>
                @Html.ActionLink("Сохранить", "DownloadStats", new { beg = ViewBag.Beg, end = ViewBag.End }, null)
            </div>
        </div>
       
        <div class="col-md-6">
            <frame>
                @{
                    string base64String = Convert.ToBase64String(ViewBag.Chart);
                }
                <img src="@String.Format("data:image/jpeg; base64,{0}", base64String)" style="width: auto; height: auto" />
            </frame>
        </div>
    </div>

}
else
{
    <h3>По данному запросу ничего не найдено</h3>
}