@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

@model IQueryable<DefinitionExtractionWeb.Models.Descriptor>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Тезаурус</title>
</head>
<body>
    <div>
        <h3>Термины</h3>
        @if (Model.Count() == 0)
        {
            @Html.Label("Не найдено терминов по запросу");
        }
        else
        {
            <table>
                <tr>
                    <td><p>Термин</p></td>
                    <td></td>
                </tr>
                @foreach (var desc in Model)
                {
                    <tr>
                        <td><p><a href="/Home/DescriptorView/@desc.ID">@desc.Descriptor_content (@desc.Relator)</a></p></td>
                        <td><p><a href="/Definitions/Edit/@desc.ID"> Редактировать </a> | <a href="/Definitions/Delete/@desc.ID"> Удалить </a> </p></td>
                    </tr>
                }
            </table>
        }
        @Html.ActionLink("Добавить", "Create", "Definitions")
    </div>
</body>
</html>