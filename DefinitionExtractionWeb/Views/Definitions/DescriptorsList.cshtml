@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Тезаурус</title>
</head>
<body>
    <div>
        <h3>Термины</h3>
        <table>
            <tr>
                <td><p>Термин</p></td>
                <td></td>
            </tr>
            @foreach (var desc in ViewBag.Descriptors)
            {
                <tr>
                    <td><p><a href="/Home/DescriptorView/@desc.ID">@desc.Descriptor_content (@desc.Relator)</a></p></td>
                    <td><p><a href="/Definitions/Edit/@desc.ID"> Изменить </a> </p></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>